<Window x:Class="GestionAvituallamiento.MaterialesAvituallamiento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MaterialesAvituallamiento" Height="346" Width="300">
    <Grid Margin="0,0,0,5">
        <DataGrid x:Name="DataGridMaterial" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="200" Width="272"
                 ItemsSource="{Binding listaMateriales}" AutoGenerateColumns="True" IsReadOnly="True"/>
        <Button x:Name="ButtonEditar" Content="Editar" Margin="10,215,10,0" VerticalAlignment="Top" Click="ButtonEditar_Click"/>
        <Button x:Name="ButtonBorrar" Content="Borrar" Margin="10,265,10,0" VerticalAlignment="Top" Click="ButtonBorrar_Click"/>
        <Button x:Name="ButtonAnnadir" Content="Añadir" Margin="10,240,10,0" VerticalAlignment="Top" Click="ButtonAnnadir_Click"/>

    </Grid>
</Window>
